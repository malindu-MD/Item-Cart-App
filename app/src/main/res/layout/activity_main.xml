<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6.5"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="3dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/round"
            android:src="@drawable/ic_launcher_foregroundff" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F7F6"
        android:layout_below="@id/nav">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_weight="1">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="100dp"
                   app:cardBackgroundColor="#ffffff"
                   android:layout_height="125dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:padding="5dp"

                       android:layout_height="match_parent">


                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentTop="true"
                           android:layout_alignParentBottom="true"
                           app:cardCornerRadius="15dp"
                           android:id="@+id/firstcamera"
                           android:layout_alignParentLeft="true">

                           <ImageView
                               android:layout_width="125dp"
                               android:layout_height="125dp"
                               android:src="@drawable/first_camera"
                               android:scaleType="centerCrop"/>



                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="DSLR Camera"
                           android:textSize="20sp"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:layout_marginTop="10dp"
                           android:id="@+id/dscam"
                           android:layout_toRightOf="@id/firstcamera"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="China"
                           android:layout_marginTop="10dp"
                           android:id="@+id/china"
                           android:layout_marginLeft="20dp"
                           android:layout_toRightOf="@id/firstcamera"
                           android:layout_below="@id/dscam" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$250"
                           android:layout_toRightOf="@id/firstcamera"
                           android:layout_below="@id/china"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="20dp"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:id="@+id/priceone"
                           android:textColor="#000000"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="+"
                           android:textSize="20sp"
                           android:id="@+id/camone_increase"
                           android:onClick="camone_increase"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1"
                           android:layout_toLeftOf="@id/camone_increase"
                           android:layout_alignParentBottom="true"
                           android:layout_marginBottom="15dp"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:id="@+id/quantityone"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="-"
                           android:textSize="20sp"
                           android:id="@+id/camone_decrease"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:onClick="camone_decrease"

                           android:layout_alignParentBottom="true"
                           android:layout_toLeftOf="@id/quantityone"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>
                       <Button
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:text="X"
                           android:textColor="#ffffff"
                           android:background="@drawable/roundtwo"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentTop="true"/>





                   </RelativeLayout>




               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_weight="1">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="100dp"
                   app:cardBackgroundColor="#ffffff"
                   android:layout_height="125dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:padding="5dp"

                       android:layout_height="match_parent">


                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentTop="true"
                           android:layout_alignParentBottom="true"
                           app:cardCornerRadius="15dp"
                           android:id="@+id/secondcamera"
                           android:layout_alignParentLeft="true">

                           <ImageView
                               android:layout_width="125dp"
                               android:layout_height="125dp"
                               android:src="@drawable/second_camera"
                               android:scaleType="centerCrop"/>



                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Normal Camera"
                           android:textSize="20sp"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:layout_marginTop="10dp"
                           android:id="@+id/seccam"
                           android:layout_toRightOf="@id/secondcamera"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Japan"
                           android:layout_marginTop="10dp"
                           android:id="@+id/japan"
                           android:layout_marginLeft="20dp"
                           android:layout_toRightOf="@id/secondcamera"
                           android:layout_below="@id/seccam" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$350"
                           android:layout_toRightOf="@id/secondcamera"
                           android:layout_below="@id/japan"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="20dp"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:id="@+id/pricetwo"
                           android:textColor="#000000"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="+"
                           android:textSize="20sp"
                           android:id="@+id/camtwo_increase"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:onClick="camtwo_increase"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1"
                           android:layout_toLeftOf="@id/camtwo_increase"
                           android:layout_alignParentBottom="true"
                           android:layout_marginBottom="15dp"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:id="@+id/quantitytwo"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="-"
                           android:textSize="20sp"
                           android:id="@+id/camtwo_decrease"
                           android:background="@drawable/round"
                           android:onClick="camtwo_decrease"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentBottom="true"
                           android:layout_toLeftOf="@id/quantitytwo"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>
                       <Button
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:text="X"
                           android:textColor="#ffffff"
                           android:background="@drawable/roundtwo"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentTop="true"/>





                   </RelativeLayout>




               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_weight="1">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="100dp"
                   app:cardBackgroundColor="#ffffff"
                   android:layout_height="125dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:padding="5dp"

                       android:layout_height="match_parent">


                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentTop="true"
                           android:layout_alignParentBottom="true"
                           app:cardCornerRadius="15dp"
                           android:id="@+id/laserlight"
                           android:layout_alignParentLeft="true">

                           <ImageView
                               android:layout_width="125dp"
                               android:layout_height="125dp"
                               android:src="@drawable/laser_light"
                               android:scaleType="centerCrop"/>



                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Laser Light"
                           android:textSize="20sp"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:layout_marginTop="10dp"
                           android:id="@+id/llight"
                           android:layout_toRightOf="@id/laserlight"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Srilanka"
                           android:layout_marginTop="10dp"
                           android:id="@+id/srilanka"
                           android:layout_marginLeft="20dp"
                           android:layout_toRightOf="@id/laserlight"
                           android:layout_below="@id/llight" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$450"
                           android:layout_toRightOf="@id/laserlight"
                           android:layout_below="@id/srilanka"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="20dp"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:id="@+id/pricethree"
                           android:textColor="#000000"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="+"
                           android:textSize="20sp"
                           android:id="@+id/laser_increase"
                           android:background="@drawable/round"
                           android:onClick="laser_increase"
                           android:textStyle="bold"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1"
                           android:layout_toLeftOf="@id/laser_increase"
                           android:layout_alignParentBottom="true"
                           android:layout_marginBottom="15dp"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:id="@+id/quantitythree"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="-"
                           android:textSize="20sp"
                           android:id="@+id/laser_decrease"
                           android:onClick="laser_decrease"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentBottom="true"
                           android:layout_toLeftOf="@id/quantitythree"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>
                       <Button
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:text="X"
                           android:textColor="#ffffff"
                           android:background="@drawable/roundtwo"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentTop="true"/>





                   </RelativeLayout>




               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_weight="1">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="100dp"
                   app:cardBackgroundColor="#ffffff"
                   android:layout_height="125dp">


                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:padding="5dp"

                       android:layout_height="match_parent">


                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentTop="true"
                           android:layout_alignParentBottom="true"
                           app:cardCornerRadius="15dp"
                           android:id="@+id/securitycamera"
                           android:layout_alignParentLeft="true">

                           <ImageView
                               android:layout_width="125dp"
                               android:layout_height="125dp"
                               android:src="@drawable/seurity_camera"
                               android:scaleType="centerCrop"/>



                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Security Camera"
                           android:textSize="20sp"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:layout_marginTop="10dp"
                           android:id="@+id/secams"
                           android:layout_toRightOf="@id/securitycamera"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="India"
                           android:layout_marginTop="10dp"
                           android:id="@+id/india"
                           android:layout_marginLeft="20dp"
                           android:layout_toRightOf="@id/securitycamera"
                           android:layout_below="@id/secams" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$550"
                           android:layout_toRightOf="@id/securitycamera"
                           android:layout_below="@id/india"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="20dp"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:id="@+id/pricefour"
                           android:textColor="#000000"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="+"
                           android:textSize="20sp"
                           android:id="@+id/security_increase"
                           android:onClick="security_increase"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1"
                           android:layout_toLeftOf="@id/security_increase"
                           android:layout_alignParentBottom="true"
                           android:layout_marginBottom="15dp"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:id="@+id/quantityfour"/>
                       <Button
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:text="-"
                           android:textSize="20sp"
                           android:id="@+id/security_decrease"
                           android:onClick="security_decrease"
                           android:background="@drawable/round"
                           android:textStyle="bold"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentBottom="true"
                           android:layout_toLeftOf="@id/quantityfour"
                           android:layout_marginBottom="13dp"
                           android:layout_marginTop="30dp"/>
                       <Button
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:text="X"
                           android:textColor="#ffffff"
                           android:background="@drawable/roundtwo"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentTop="true"/>





                   </RelativeLayout>


               </androidx.cardview.widget.CardView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:background="#F9F7F6"
               android:layout_weight="1">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardBackgroundColor="#F9F7F6"
                   android:layout_height="125dp">


               </androidx.cardview.widget.CardView>

           </LinearLayout>







       </LinearLayout>




    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:background="@drawable/roundfour"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:id="@+id/checkout"
            android:onClick="checkout"
            android:background="@drawable/roundthree"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:id="@+id/totprice"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1600"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/totprice"
            android:layout_marginLeft="35dp"
            android:id="@+id/totalprice"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>




</RelativeLayout>